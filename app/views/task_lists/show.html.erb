<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @task_list.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @task_list.user.user_name %>
</p>

<p>
  <strong>Tasks</strong>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Days Left</th>
        <th>Complete</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @task_list.tasks.each do |t| %>
        <tr>
          <td><%= link_to t.title, [@task_list, t] %></td>
          <td><%= t.body %></td>
          <td><%= t.due_date %></td>
          <td><%= t.complete %></td>
        </tr>        
  <!-- above in words: grab a task and return title, and generate path using task_list & task -->
      <% end %>
    </tbody>
  </table>  
      
</p>  

<%= link_to "Add a Task", new_task_list_task_path(@task_list) %> | 
<%= link_to 'Edit', edit_task_list_path(@task_list) %> |
<%= link_to 'Back', task_lists_path %> 

